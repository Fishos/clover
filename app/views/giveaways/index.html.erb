

<h1>Giveaways</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th>Begin giveaway</th>
      <th>End giveaway</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @giveaways.each do |giveaway| %>
      <tr>
        <td><%= giveaway.title %></td>
        <td><%= giveaway.description %></td>
        <td><%= giveaway.status %></td>
        <td><%= giveaway.begin_giveaway %></td>
        <td><%= giveaway.end_giveaway %></td>
        <td><%= link_to 'Show', giveaway, class: 'button' %></td>
        <td><%= link_to 'Edit', edit_giveaway_path(giveaway), class: 'button' %></td>
        <td><%= link_to 'Destroy', giveaway, method: :delete, data: { confirm: 'Are you sure?' }, class: 'hollow button'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Giveaway', new_giveaway_path, :class =>
'hollow button' %>
